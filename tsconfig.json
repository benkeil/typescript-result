{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "lib": [
      "ESNext",
      "ES2015",
      "DOM",
      "ES2019"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
